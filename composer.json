{
  "name": "mintware-de/streams",
  "description": "A implementation of the PSR-7 StreamInterface",
  "keywords": [
    "PSR",
    "PSR-7",
    "StreamInterface",
    "ResourceStream",
    "MemoryStream",
    "InputStream",
    "OutputStream",
    "FileStream",
    "Resource"
  ],
  "type": "library",
  "require": {
    "php": "^7.4 || ^8.0",
    "psr/http-message": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.0 || ^8.0 || ^9.0",
    "phpstan/phpstan": "^1.4",
    "friendsofphp/php-cs-fixer": "^v3.8.0"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Julian Finkler",
      "email": "julian@mintware.de"
    }
  ],
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "MintWare\\Streams\\": "src/",
      "MintWare\\Tests\\Streams\\": "tests/"
    }
  },
  "scripts": {
    "fix-cs": [
      "./vendor/bin/php-cs-fixer fix ./src/ --using-cache=no --rules=@PSR2",
      "./vendor/bin/php-cs-fixer fix ./tests/ --using-cache=no --rules=@PSR2"
    ],
    "fix-cs:dry-run": [
      "./vendor/bin/php-cs-fixer fix ./src/ --using-cache=no --rules=@PSR2 --dry-run",
      "./vendor/bin/php-cs-fixer fix ./tests/ --using-cache=no --rules=@PSR2 --dry-run"
    ],
    "phpstan": [
      "./vendor/bin/phpstan"
    ],
    "test": [
      "./vendor/bin/phpunit"
    ]
  }
}
